public class Test {

	public static void main(String[] args) {

		// TODO Auto-generated method stub
		int value = 0;
		int total = 0;
		float sum = 0f;
		float average = 0f;
			for (int rolls = 0; rolls < 5; rolls++) {

				value = (int) (Math.random() * 6 + 1);
				total += value;
				System.out.println(value);

			}

			sum = (float) total;
			System.out.print("Total value of 5 rolls: ");
			System.out.println(sum);
			average = (float) total / 5f;
			System.out.print("Average value of 5 rolls: ");
			System.out.println(average);
		
	}
}
